        <FrameLayout
            android:id="@+id/fl_mainContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </android.support.design.widget.CoordinatorLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#1e000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="bottom"
        android:background="@color/backDefault">

        <LinearLayout
            android:id="@+id/ll_MainPage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ll_MainPage_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_home_black_24dp" />

            <TextView
                android:id="@+id/ll_MainPage_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="首页" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_GuanShui"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ll_GuanShui_icon"
                android:layout_width="22dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_feedback_black_24dp" />

            <TextView
                android:id="@+id/ll_GuanShui_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="灌水" />

        </LinearLayout>

        <!--        <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:orientation="vertical">

                </LinearLayout>-->

        <LinearLayout
            android:id="@+id/ll_JieCare"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ll_JieCare_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_group_black_24dp" />

            <TextView
                android:id="@+id/ll_JieCare_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="接单" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ll_user_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_account_circle_black_24dp" />

            <TextView
                android:id="@+id/ll_user_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="我的" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
